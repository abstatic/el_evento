- var idx = 0
- var found = "false"
extends layout

block content
  h1 Available Events
  .row
    each event in data
      .col-md-3
        .panel.panel-default
          .panel-heading #{event.eventName}
          .panel-body
          ul.list-unstyled
            li 
              i.glyphicon.glyphicon-map-marker 
              | #{event.location}
            li 
              i.glyphicon.glyphicon-calendar
              | #{event.date}
            li 
              i.glyphicon.glyphicon-user
              | #{event.capacity}
            li 
              i.glyphicon.glyphicon-phone-alt
              | #{event.contact}
          if (typeof(user) != 'undefined')
            each email in event.registered
              if (email == user.email)
                -found = "true"
            if (found == "true")
              a(href='/cancelregister?name='+event.eventName) Cancel Registration
            else
              a(href='/registerevent?name='+event.eventName) Register Now!
            br
            br
            if (event.author == user.email)
              a(href='/deleteevent?name='+event.eventName class='btn btn-danger') Delete Event
              br
