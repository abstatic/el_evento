- var language = "Jade"
doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/css/bootstrap.css')
    link(rel='stylesheet', href='/css/style.css')
  body
    .navbar.navbar-inverse.navbar-fixed-top(role='navigation')
      .container-fluid
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') El Evento
        .collapse.navbar-collapse
          ul.nav.navbar-nav
            li.active
              a(href='/') Home
            li
              a(href='/about') About
            li
              a(href='/login') Login
            li
              a(href='/viewcalendar') View Calendar
            if language=="Jade"
              li
                a(href='/addevent') Add Event
              li
                a(href='/viewevents') View Event
              li
                a(href='/acceptrequest') Accept Requests
            else
              li
                a(href='#') Unauthenticated User
        // /.nav-collapse
    .container-fluid
      .starter-template
        h1 Bootstrap starter template
        p.lead
          |Use this document as a way to quickly start any new project.
          br
          |All you get is this text and a mostly barebones HTML document.
      block content
    script(src='/js/jquery.js')
    script(src='/js/bootstrap.js')
    script(src='/js/script.js')
